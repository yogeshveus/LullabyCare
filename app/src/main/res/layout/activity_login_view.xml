<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D3A74"
    android:padding="24dp">


    <TextView
        android:id="@+id/tvSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="221dp"
        android:padding="10dp"
        android:text="Sign in"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvSubtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Please sign in to continue"
        android:textColor="#B0B4D8"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvSignIn" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0.4"
        android:background="@drawable/search_bar_background"
        android:hint="Username"
        android:padding="12dp"
        android:textColor="@android:color/white"
        android:textColorHint="#B0B4D8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle" />

    <View
        android:id="@+id/breakLine"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="#B0B4D8"
        android:alpha="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etUsername"
        app:layout_constraintTop_margin="16dp"/>


    <EditText
        android:id="@+id/etPassword"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:alpha="0.4"
        android:background="@drawable/search_bar_background"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColor="@android:color/white"
        android:textColorHint="#B0B4D8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/breakLine" />

    <View
        android:id="@+id/breakLine2"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="#B0B4D8"
        android:alpha="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etPassword"
        app:layout_constraintTop_margin="16dp"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:backgroundTint="#FBEAEA"
        android:text="LOGIN"
        android:textAllCaps="true"
        android:textColor="#2D3A74"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/breakLine2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="24dp" />

    <View
        android:id="@+id/breakLine3"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="#B0B4D8"
        android:alpha="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnLogin"
        app:layout_constraintTop_margin="16dp"/>

    <TextView
        android:id="@+id/tvForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textColor="#B0B4D8"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/breakLine3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="8dp" />

    <View
        android:id="@+id/breakLine4"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#B0B4D8"
        android:alpha="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvForgotPassword"
        app:layout_constraintTop_margin="16dp"/>

    <View
        android:id="@+id/viewDividerLeft"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#B0B4D8"
        app:layout_constraintTop_toBottomOf="@id/breakLine4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvOr"
        app:layout_constraintTop_margin="24dp" />


    <TextView
        android:id="@+id/tvOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or"
        android:textColor="#B0B4D8"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvForgotPassword"
        app:layout_constraintStart_toEndOf="@id/viewDividerLeft"
        app:layout_constraintEnd_toStartOf="@id/viewDividerRight"
        app:layout_constraintTop_margin="16dp" />



    <View
        android:id="@+id/viewDividerRight"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#B0B4D8"
        app:layout_constraintTop_toBottomOf="@id/tvForgotPassword"
        app:layout_constraintStart_toEndOf="@id/tvOr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="24dp" />

    <View
        android:id="@+id/breakLine5"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="#B0B4D8"
        android:alpha="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvOr"
        app:layout_constraintTop_margin="16dp"/>


    <Button
        android:id="@+id/register"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:backgroundTint="#3C4E9B"
        android:text="Register"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/breakLine5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
